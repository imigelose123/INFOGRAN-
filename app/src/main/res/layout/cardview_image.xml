<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:circularflow_radiusInDP="@dimen/carner_radius_cardview"
    android:layout_margin="@dimen/margin_cardview">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/imagen1"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@color/background_cardview"
            android:padding="@dimen/padding_card_view">

            <TextView
                android:id="@+id/usenameCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carlos_vargas"
                android:textSize="24sp"
                android:textColor="@color/textColor_white"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"/>

               <TextView
                   android:id="@+id/cantidaDiasCardView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/hace_cardview"
                   android:textSize="14sp"
                   android:textColor="@color/textColor_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dias_cardview"
                android:textSize="14sp"
                android:textColor="@color/textColor_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector"/>


        <TextView
            android:id="@+id/cantidadMeGustaCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_gusta_cardview"
            android:textSize="16sp"
            android:textColor="@color/textColor_white"/>

    LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>